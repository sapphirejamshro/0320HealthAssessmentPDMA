<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item >
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#4BD9D7D7" />

            <corners android:radius="5dp" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#72D9D7D7" />

            <corners android:radius="5dp" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#9AD9D7D7" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#D8D9D7D7" />

            <corners android:radius="5dp" />

        </shape>
    </item>

    <!-- Background -->
    <item android:top="1dp"
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />

            <corners android:radius="5dp" />

        </shape>
    </item>

</layer-list>
