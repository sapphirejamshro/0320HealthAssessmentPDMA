<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <size android:width="25dp"
                        android:height="25dp"/>
                    <solid  android:color="@color/appColorWhite"
                        />
                </shape>
            </item>
            <item >
                <bitmap  android:gravity="center"
                    android:src="@drawable/parralelogram" >
                </bitmap>
            </item>
        </layer-list>
    </item>
</selector>
