<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/sign_in_bg"
    tools:context=".activity.LanguageOptionSelectionActivity">

    <ScrollView
        android:id="@+id/scrollview_lang_opt_sel_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="12dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:isScrollContainer="false"
        android:scrollbars="none">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/insideView_lang_opt_sel_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sign_in_logo_lang_opt_sel_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sign_in_logo"
            android:adjustViewBounds="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_lang_opt_sel_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/provincial_management_authority"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/appColorBlack"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintStart_toStartOf="@+id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintLeft_toLeftOf="@id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintEnd_toEndOf="@id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintRight_toRightOf="@id/sign_in_logo_lang_opt_sel_frag"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/myriad_pro_bold"
            android:gravity="center_horizontal" />

        <View
            android:id="@+id/view_line_separator_lang_opt_frag"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/appColorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_lang_opt_sel_frag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/imgV_urdu_btn_lang_opt_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/urdu_icon"
            android:adjustViewBounds="true"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view_line_separator_lang_opt_frag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/imgV_eng_btn_lang_opt_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/english_icon"
            android:adjustViewBounds="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imgV_urdu_btn_lang_opt_frag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/imgV_sindhi_btn_lang_opt_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sindhi_icon"
            android:adjustViewBounds="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imgV_eng_btn_lang_opt_frag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>