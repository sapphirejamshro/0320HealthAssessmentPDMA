<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_person_CILayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_text"
        android:textColor="@color/appColorBlack"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/myriad_pro_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        />

    <TextView
        android:id="@+id/tv_nameError_person_CILayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="2dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:text="Name is required."
        android:textColor="@color/requireRedColor"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_person_CILayout"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name_person_CILayout"
        app:layout_constraintStart_toStartOf="@+id/tv_name_person_CILayout"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_name_person_CILayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameError_person_CILayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.sapphire.HealthAssessmentPDMA.helper.BackPressAwareEdittext
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shahid Qureshi"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@color/appColorBlack"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/myriad_pro_regular"

            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_mobileNo_person_CILayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_no1"
        android:textColor="@color/appColorBlack"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/myriad_pro_regular"
        app:layout_constraintTop_toBottomOf="@+id/cardView_name_person_CILayout"
        app:layout_constraintLeft_toLeftOf="@+id/cardView_name_person_CILayout"
        app:layout_constraintStart_toStartOf="@+id/cardView_name_person_CILayout"
        />

    <TextView
        android:id="@+id/tv_MobileError_person_CILayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="2dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:text="Mobile No is required."
        android:textColor="@color/requireRedColor"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_mobileNo_person_CILayout"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mobileNo_person_CILayout"
        app:layout_constraintStart_toStartOf="@+id/tv_mobileNo_person_CILayout"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_mobileNo_person_CILayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_MobileError_person_CILayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.sapphire.HealthAssessmentPDMA.helper.BackPressAwareEdittext
            android:id="@+id/edMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+923331234567"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@color/appColorBlack"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/myriad_pro_regular"
            android:maxLength="13"
            android:longClickable="false"
            android:contextClickable="false"


            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNextButton_person_CILayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="4dp"
        android:outlineProvider="bounds"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/cardView_mobileNo_person_CILayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        >
        <Button
            android:id="@+id/btn_next_person_CILayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="@color/appColorWhite"
            android:background="@drawable/btn_sign_in"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:fontFamily="@font/myriad_pro_regular"
            android:includeFontPadding="false"

            />
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/view_spacing_person_contact_info_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewNextButton_person_CILayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>