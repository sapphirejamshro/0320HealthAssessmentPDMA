<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_main_container_prevention_adapter_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"

    >

    <ImageView
        android:id="@+id/imgV_icon_prevention_rv_adapter_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/prevention_screen_icon_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_text_prevention_rv_adapter_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dispose_tissue_text"
        android:textColor="@color/appColorBlack"
        android:textSize="9sp"
        android:fontFamily="@font/notonastaliqurdu_regular"
        android:gravity="right"
        android:includeFontPadding="false"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</LinearLayout>