<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.StaySafeTravelFragment">

    <ScrollView
        android:id="@+id/scrollviewStaySafeFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:isScrollContainer="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerLayoutStaySafeFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:id="@+id/tvLabelStaySafeFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stay Safe/Travel"
                android:fontFamily="@font/myriad_pro_bold"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/appColorGreen"
                android:layout_marginTop="35dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <ImageView
                android:id="@+id/imgViewStaySafeFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/stay_safe_travel"
                app:layout_constraintDimensionRatio="w,16:9"
                app:layout_constraintEnd_toEndOf="@+id/tvLabelStaySafeFrag"
                app:layout_constraintRight_toRightOf="@+id/tvLabelStaySafeFrag"
                app:layout_constraintLeft_toLeftOf="@+id/tvLabelStaySafeFrag"
                app:layout_constraintStart_toStartOf="@+id/tvLabelStaySafeFrag"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelStaySafeFrag"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@id/imgViewStaySafeFrag"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>