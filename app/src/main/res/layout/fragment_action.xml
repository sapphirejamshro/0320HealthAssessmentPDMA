<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ActionFragment"
    android:layout_marginStart="3dp"
    android:layout_marginLeft="3dp"
    >
    <ImageView
        android:id="@+id/imageViewActionFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/screening_not_needed_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_innerViewActionFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageViewActionFrag"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewActionFrag"
        app:layout_constraintStart_toStartOf="@+id/imageViewActionFrag"
        app:layout_constraintEnd_toEndOf="@+id/imageViewActionFrag"
        app:layout_constraintRight_toRightOf="@+id/imageViewActionFrag"
        android:background="@drawable/neg_survey_res_bg"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"

        >

        <TextView
            android:id="@+id/tv_resTitleActionFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/result_innerViewActionFrag"
            app:layout_constraintLeft_toLeftOf="@+id/result_innerViewActionFrag"
            app:layout_constraintStart_toStartOf="@+id/result_innerViewActionFrag"
            android:text="RESULT"
            android:visibility="gone"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/appColorBlack"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/myriad_pro_bold"

            />

        <TextView
            android:id="@+id/tv_resMsg_ActionFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_resTitleActionFrag"
            app:layout_constraintLeft_toLeftOf="@+id/result_innerViewActionFrag"
            app:layout_constraintStart_toStartOf="@+id/result_innerViewActionFrag"
            android:text="@string/positive_test_res_msg"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/appColorBlack"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/myriad_pro_regular"



            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_actionNeedActionFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/result_innerViewActionFrag"
        app:layout_constraintLeft_toLeftOf="@+id/result_innerViewActionFrag"
        app:layout_constraintStart_toStartOf="@+id/result_innerViewActionFrag"
        app:layout_constraintEnd_toEndOf="@+id/result_innerViewActionFrag"
        app:layout_constraintRight_toRightOf="@+id/result_innerViewActionFrag"
        android:layout_marginTop="20sp"
        android:text="SCREENING NEEDED"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/green_color"
        android:fontFamily="@font/myriad_pro_bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_actionNeedActionFrag"
        />

