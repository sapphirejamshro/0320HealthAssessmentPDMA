<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainConstraintLayout"
    >

    <TextView
        android:id="@+id/tvHeading_SymptomsRVLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/myriad_pro_regular"
        android:includeFontPadding="false"
        android:text="How it Spread"
        android:textSize="22sp"
        android:textColor="@color/appColorWhite"
        android:background="@drawable/bg_tv_new"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:textDirection="inherit"

        />

    <TextView
        android:id="@+id/tvSubHeading_SymptomsRVLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading_SymptomsRVLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/myriad_pro_regular"
        android:includeFontPadding="false"
        android:text="The virus has been shown to mainly in close human-to-human"
        android:textSize="20sp"
        android:textColor="@color/appColorBlack"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textDirection="inherit"

        />

    <LinearLayout
        android:id="@+id/linearLayout_info_SymptomsRVLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/tvSubHeading_SymptomsRVLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/imgV_bulletEnglish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_bullet"
            android:visibility="visible"
            android:layout_gravity="top"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tvInfo_SymptomsRVLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriad_pro_regular"
            android:includeFontPadding="false"
            android:text="@string/howItSpreadTextUrdu"
            android:textSize="16sp"
            android:textColor="@color/appColorBlack"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textDirection="inherit"
            android:layout_weight="8"
            />

        <ImageView
            android:id="@+id/imgV_bulletUrdu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_dot_bullet"
            android:visibility="gone"
            android:layout_gravity="top"
            android:layout_marginTop="26dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginRight="-30dp"


            />
    </LinearLayout>

    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_info_SymptomsRVLayout"
        android:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>