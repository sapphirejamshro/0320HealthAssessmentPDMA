<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:paddingStart="30dp"
    android:paddingLeft="30dp"
    android:paddingEnd="30dp"
    android:paddingRight="30dp"
    android:id="@+id/relLay_main_container_custom_alert"
    >

    <LinearLayout
        android:id="@+id/linearlayout_cad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/custom_alert_bg"
        android:layout_marginTop="30dp"
        >


        <TextView
            android:id="@+id/tv_title_custome_alert_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failure"
            android:textColor="@color/appColorBlack"
            android:layout_marginTop="45dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_description_custome_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We are unable to process this request at the moment.Please try after some time"
            android:textColor="@color/appColorBlack"
            android:textStyle="normal"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            />


        <Button
            android:id="@+id/btn_done_custome_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textColor="@color/appColorWhite"
            android:textSize="20sp"
            android:background="@color/requireRedColor"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgB_close_custome_alert_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cross_icon"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/cross_btn_bg_custom_error_dialog"
        />

</RelativeLayout>