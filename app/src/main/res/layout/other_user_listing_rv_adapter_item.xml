<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    app:layout_goneMarginEnd="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/llOtherUserListing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no_user_listing_rv_adapter_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/appColorWhite"
            android:textSize="15sp"
            android:background="@color/survey_color"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_name_user_listing_rv_adapter_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/appColorBlack"
                android:text="علی"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_no_user_listing_rv_adapter_item"
                app:layout_constraintStart_toEndOf="@+id/tv_no_user_listing_rv_adapter_item"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textDirection="ltr"
                />

            <TextView
                android:id="@+id/tv_phone_other_user_listing_rv_adapter_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_grey"
                android:text="01/04/2020"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_user_listing_rv_adapter_item"
                app:layout_constraintLeft_toRightOf="@+id/tv_no_user_listing_rv_adapter_item"
                app:layout_constraintStart_toEndOf="@+id/tv_no_user_listing_rv_adapter_item"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>