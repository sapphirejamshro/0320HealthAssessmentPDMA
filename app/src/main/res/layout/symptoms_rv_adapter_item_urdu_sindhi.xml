<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linearLayoutMainRvSymptomsAdapterItem">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTitleRvSymptomsAdapterItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="1dp"
        app:cardElevation="4dp"
        android:elevation="4dp"
        app:cardMaxElevation="4dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">
            <ImageView
                android:id="@+id/imgDropdownRvSymptomsAdapterItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/drop_down_icon"
                />
            <TextView
                android:id="@+id/tvItemTitleRvSymptomsAdapterItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Collapsible Group Item # 1"
                android:textColor="@color/app_color_green"
                android:textSize="16sp"
                android:fontFamily="@font/myriad_pro_regular"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/imgDottedRvSymptomsAdapterItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:background="@mipmap/three_dots_with_bg"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayoutItemDescriptionRvSymptomsAdapterItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSimpleDescTextSymptomRvAdapterItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/howItSpreadText"
            android:textColor="@color/darkGreenColor"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            />
        <ListView
            android:id="@+id/lstViewRvSymptomsAdapterItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/lv_symtoms_adapter"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:divider="@null"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:scrollbars="none"
            android:visibility="visible"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

