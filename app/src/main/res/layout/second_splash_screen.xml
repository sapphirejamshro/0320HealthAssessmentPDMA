<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sign_in_bg">

    <ScrollView
        android:id="@+id/scrollview_splashScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="12dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:isScrollContainer="false"
        android:scrollbars="none"
        android:layout_marginTop="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conslayout_main_container_second_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/sign_in_logo_lang_opt_sel_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sign_in_logo"
            android:adjustViewBounds="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_sec_splash_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/provincial_management_authority"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/appColorBlack"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintStart_toStartOf="@+id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintLeft_toLeftOf="@id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintEnd_toEndOf="@id/sign_in_logo_lang_opt_sel_frag"
            app:layout_constraintRight_toRightOf="@id/sign_in_logo_lang_opt_sel_frag"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/myriad_pro_bold"
            android:gravity="center_horizontal" />

        <View
            android:id="@+id/view_line_separator_lang_opt_frag"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/appColorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sec_splash_frag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!--<TextView
            android:id="@+id/tv_inverted_comma_second_splash_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=",,"
            android:textSize="28sp"
            android:textColor="@color/app_color_green"
            android:rotation="180"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view_line_separator_lang_opt_frag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />-->

        <TextView
            android:id="@+id/tv_info_second_splash_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/second_splash_screen_text"
            android:textSize="38sp"
            android:textColor="@color/appColorBlack"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line_separator_lang_opt_frag"
            android:fontFamily="@font/myriad_pro_regular"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>